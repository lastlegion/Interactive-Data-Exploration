extends layout

block content

	div(class='navbar navbar-inverse navbar-fixed-top' id='header' role='navigation')
		.container-fluid
			.navbar-header
				a.navbar-brand(href='#') Demo Visualisation
	div(class='container-fluid')
		div(class='row')
			div(class='col-sm-3 col-md-2 sidebar')
				h4 Filtering Attributes
				//
					div(class='panel panel-default')
						div(class='panel-heading') 
							h3(class='panel-title') Panel
						div(class='panel-body smallChart' id='small-chart') 
				div(class="btn-group-vertical" id="filtering_attributes")
					button(class="btn btn-default btn-lg", type="button",data-toggle="modal", data-target="#aModal") A
					button(class="btn btn-default btn-lg", type="button",data-toggle="modal", data-target="#bModal") B 
					button(class="btn btn-default btn-lg", type="button",data-toggle="modal", data-target="#cModal") C
			div(class='col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main')
				div(class='row')
					table(id='dataTable' class='table table-hover table-striped')


	div(class="containter modals")
		div(class='modal fade', id='aModal', role='dialog', aria-labelledby="myLargeModalLabel", aria-hidden="true")
			div(class='modal-dialog modal-lg')
				div(class='modal-content')
					div(class="chart" id="chart1")
		div(class='modal fade', id='bModal', role='dialog', aria-labelledby="myLargeModalLabel", aria-hidden="true")
			div(class='modal-dialog modal-lg')
				div(class='modal-content')
					div(class='chart')
		div(class='modal fade', id='cModal', role='dialog', aria-labelledby="myLargeModalLabel", aria-hidden="true")
			div(class='modal-dialog modal-lg')
				div(class='modal-content')
					div(class='chart')
		div(class='modal fade', id='dModal', role='dialog', aria-labelledby="myLargeModalLabel", aria-hidden="true")
			div(class='modal-dialog modal-lg')
				div(class='modal-content')
					div(class='chart')
		div(class='modal fade', id='eModal', role='dialog', aria-labelledby="myLargeModalLabel", aria-hidden="true")
			div(class='modal-dialog modal-lg')
				div(class='modal-content')
					div(class='chart')
		div(class='modal fade', id='fModal', role='dialog', aria-labelledby="myLargeModalLabel", aria-hidden="true")
			div(class='modal-dialog modal-lg')
				div(class='modal-content')
					div(class='chart')
		div(class='modal fade', id='gModal', role='dialog', aria-labelledby="myLargeModalLabel", aria-hidden="true")
			div(class='modal-dialog modal-lg')
				div(class='modal-content')
					div(class='chart')

	script(src='javascripts/vis3.js', type='text/javascript')
